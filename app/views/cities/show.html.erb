
<div class="container">
  <div id="header" class="row justify-content-center">
    <div>
      <h1><%= @city.name %></h1>
    </div>
    <div class="center">
      <%= link_to "New Post", city_post_path(@city), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row justify-content-center portrait">
      <img src="<%= @city.image_url %>">
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
        <ul id="poststitle">
          <% @city.newest_posts.each do |post| %>
            <li>
              <div class="round-image-100">
                <%= image_tag(post.user.avatar.url(:thumb)) %>
                <%= link_to post.title,user_post_path(post.user,post)  %>
                <br>
              </div>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>

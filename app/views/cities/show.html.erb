
<div class="container">
  <div class="row justify-content-center">
    <div>
      <h1><%= @city.name %></h1>
    </div>
    <div class="center">
      <%= link_to "New Post", city_post_path(@city), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row justify-content-center">
      <img src="<%= @city.image_url %>">
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
        <br>
        <ul id="poststitle">
          <% @city.newest_posts.each do |post| %>
            <li>
                <div class="round-image-50">
                  <%= image_tag(post.user.avatar.url(:thumb)) %>
                  <%= link_to truncate(post.content, :length => 80, :omission => '...... (view more)'),user_post_path(post.user,post)  %>
                  <%= time_ago_in_words(post.created_at) %> ago
                </div>
            </li>
            <br>
          <% end %>
        </ul>
    </div>
  </div>
</div>

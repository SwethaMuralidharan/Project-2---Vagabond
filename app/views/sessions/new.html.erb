
<div class="row">
  <div class="col-md-4"></div>
    <div class="col-md-4">

      <h4> Login </h4>

<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div>
    <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>
  <%= f.submit "Log In" %>
<% end %>
</div>
<div class="col-md-4"></div>
</div>

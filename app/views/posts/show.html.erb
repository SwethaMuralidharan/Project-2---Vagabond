<div class="container">
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="profile_info">
          <h1><%= @user.firstname %> <%= @user.lastname %> <br></h1>
          <div class="round-image-100"><%= image_tag(@user.avatar.url(:medium)) %></div>
          <br>
          <h4><span class="glyphicon glyphicon-time"></span> Joined On <%= @user.created_at %><br></h4>
          <h4><span class="glyphicon glyphicon-home"></span>  Living in <%= @user.current_city %></h4>
          </div>
      </div>
      <div class="col-md-6">
          <h1> <p class="header"> City : <%= @post.city.name %> </p> </h1><br>
          <h2 class="justify"> <p> <%= @post.title %> : </p> </h2> <br>
          <h3 class="justify"> <%= @post.content %> </h3>
          <%= time_ago_in_words(@post.created_at) %> ago
      </div>
  </div>
</div>

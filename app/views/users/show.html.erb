
<div class="container">
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="profile_info">
          <h1><%= @user.firstname %> <%= @user.lastname %> <br></h1>
          <br>
          <span class="glyphicon glyphicon-time"></span> Joined On <%= @user.created_at %><br>
          <span class="glyphicon glyphicon-home"></span>  Living in <%= @user.current_city %>
          </div>
          <div class="center">
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
          </div>
      </div>
      <div class="col-md-6">
        <div class="profile_info">
          <h1> Posts made by this user </h1>
          <br>
          <ul>
            <% @user.posts.each do |post| %>
              <li>
                <div>
                  <%= link_to post.title,user_post_path(@user,post) %>
                  <%= link_to '', edit_user_post_path(@user,post), class: "btn btn-info btn-md glyphicon glyphicon-pencil" %>
                  <%= link_to '', [@user,post],
                                method: :delete,
                                class: "btn btn-info btn-md glyphicon glyphicon-trash",
                                data: { confirm: 'Are you sure?' } %>
                </div>
              </li>
            <% end %>
          </ul>
       </div>
      </div>
  </div>
</div>

